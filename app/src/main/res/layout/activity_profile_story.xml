<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProfileStoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_section"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baseline_account_circle_24"
                    android:contentDescription="@string/todo" />

                <!-- Name and Information -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:src="@drawable/baseline_settings_24"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:contentDescription="@string/setingan" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toStartOf="@id/imageButton"
                        android:text="@string/john_doe"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/information"
                        android:layout_below="@id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/imageButton"
                        android:text="@string/_34_have_bought" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Rectangle Section -->
            <LinearLayout
                android:id="@+id/rectangle_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Texts and Date-Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/left_image"
                        android:layout_width="83dp"
                        android:layout_height="88dp"
                        android:src="@drawable/baju"
                        android:contentDescription="@string/Baju" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Text on right after the image -->
                            <TextView
                                android:id="@+id/text_after_image"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/pakaian_adat_batak" />

                            <!-- Date and Time on the far right -->
                            <TextView
                                android:id="@+id/date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="12dp"
                                android:text="@string/_19_may" />

                        </LinearLayout>

                        <!-- Text below the first text -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Text on right after the image -->
                            <TextView
                                android:id="@+id/a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/kurir_sedang_menuju_ke_lokasimu" />

                            <!-- Date and Time on the far right -->
                            <TextView
                                android:id="@+id/b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:text="@string/_2023" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Outstanding Payment -->
            <TextView
                android:id="@+id/outstanding_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="20dp"
                android:text="@string/outstanding_payment" />

            <!-- Long Line -->
            <View
                android:id="@+id/long_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/black" />

            <!-- New Rectangle Sections -->
            <LinearLayout
                android:id="@+id/rectangle_section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

